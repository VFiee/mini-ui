{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDirs": [
      ".",
      "../packages"
    ],
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "../packages/types",
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@Images/*": [
        "./src/assets/images/*"
      ],
      "@vyron/mini-ui": [
        "../../mini-components",
        "../packages",
      ],
      "@vyron/mini-ui/*": [
        "../lib/*",
        "../packages/*",
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}